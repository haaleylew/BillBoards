<div class="Header">
  <div class="navgrid_7">
    {{!-- <a href="">Home</a> / <a href="">Logout</a> --}}
  </div>
</div>
<div class="wrapper">
  <h1>
    BILL BOARD
  </h1>
</div>

<div id="accordion">
  {{#each category}}
    <h3 class="category">
      {{#if isIncome}}  
        <span class="catTitle">{{name}}</span>
        <div class="row">
          <div class="col-sm-4"><span >Total Income</span></div>
          <div class="col-sm-4 expense" ><span>Total Expenses</span></div>
          <div class="col-sm-4 budget" ><span>Total Budgeted</span></div>
        </div>
        <div class="row">
          <div class="col-sm-4"><span id="total-income">${{totalIncome}}</span></div>
          <div class="col-sm-4 expense" id="total-expenses expense"><span>${{totalExpenses}}</span></div>
          <div class="col-sm-4 budget" id="total-budget budget"><span>${{totalBudgets}}</span></div>
        </div>
      {{else}}
        <span class="catTitle">{{name}}</span>
        <div class="row">
          <div class="col-sm-2 budget {{class}}"><span>${{budgetTotal}}</span></div>
          <div class="col-sm-2 expense {{class}}"><span>${{expensesTotal}}</span></div>
          <div class="col-sm-1 actualPercent"><span>{{budgetPercent}}</span></div>
          <div class="col-sm-2"><span class="suggestion">${{suggestedAmt}}</span></div>
          <div class="col-sm-1"><span class="suggestion">[{{startPercent}}%]</span></div>
          <div class="col-sm-4"><span class="suggestion">(Range: {{minPercent}}% to {{maxPercent}}%)</span></div>
        </div>
      {{/if}}
    </h3>
    <div>
      <div class="row entries">
        <div class="col-sm-6 budgets-container {{class}}">
          {{#each budgets}}
            <div data-id={{id}} class="budget-entry entry">
              <input type="text" class="entry-name noboarder" value="{{name}}">: $</input>
              <input type="text" class="entry-amount budget-entry noboarder" value="{{amount}}"></input>
              <button class="delete-element">X</button>
            </div>
          {{/each}}
        </div>
        <div class="col-sm-6 expenses-container {{class}}">
          {{#each expenses}}
            <div data-id={{id}} class="expense-entry entry">
              <input type="text" class="entry-name noboarder" value="{{name}}">: $</input>
              <input type="text" class="entry-amount expense-entry noboarder" value="{{amount}}"></input>
              <button class="delete-element">X</button>
            </div>
          {{/each}}
        </div>
      </div>
      <form>
        <label>Add item: </label>
        <input class="entry-name" list={{name}} >
        <datalist id={{name}}>
          {{#each subCategories}}
            <option value="{{this}}"></option>
          {{/each}}
        </datalist>
        <label>Amount: </label>
        <input type="text" data-name={{name}} class="entry-amount">
        {{#unless isIncome}}
        <label>For: </label>
        <select name="entry-type" data-name={{name}} class="entry-type">
          <option value="Budgeting">Budgeting</option>
          <option value="Expense">Expense</option>
        </select>
        {{/unless}}
        <button data-name={{name}} class="save">Save</button>
      </form>

    </div>
  {{/each}}
</div>

